<h3>Recurring Jobs</h3>

<div class="table_container">
  <table class="table table-hover table-bordered table-striped table-white">
    <thead>
      <tr>
        <th>Name</th>
        <th>Cron</th>
        <th>Next Run</th>
        <th>Class</th>
        <th>Queue</th>
        <th>Arguments</th>
        <th>Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @schedule.job_specs.each do |name, job_spec| %>
        <tr>
          <td><%= name %></td>
          <td><%= job_spec.fetch 'cron', job_spec['every'] %></td>
          <td>
            <%= @helpers.next_run_at(job_spec.fetch('cron')) %>
          </td>
          <td><%= job_spec['class'] %></td>
          <td>
            <a href="<%= root_path %>queues/<%= job_spec.fetch('queue', 'default') %>"><%= job_spec.fetch('queue', 'default') %></a>
          </td>
          <td><%= job_spec['args'] %></td>
          <td>
            <form action="<%= root_path %>recurring/<%= CGI.escape(name).gsub('+', '%20') %>/enqueue" method="post">
              <%= csrf_tag if respond_to?(:csrf_tag) %>
              <input class='btn btn-primary btn-xs' type="submit" name="enque" value="<%= t('Enqueue Now') %>"/>
            </form>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
